<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>model.Aluno</class>
        <class>model.Autor</class>
        <class>model.Area</class>
        <class>model.Titulo</class>
        <class>model.Exemplar</class>
        <class>model.Emprestimo</class>
        <class>model.Item</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bib"/>
            <property name="jakarta.persistence.jdbc.user" value="uel"/>
            <property name="jakarta.persistence.jdbc.password" value="uel123"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
